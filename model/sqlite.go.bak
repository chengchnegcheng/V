// Begin 开始事务
func (db *SQLiteDB) Begin() error {
	if db.tx != nil {
		return fmt.Errorf("transaction already started")
	}

	tx, err := db.db.Begin()
	if err != nil {
		return err
	}

	db.tx = tx
	return nil
}

// Commit 提交事务
func (db *SQLiteDB) Commit() error {
	if db.tx == nil {
		return fmt.Errorf("no active transaction")
	}

	err := db.tx.Commit()
	db.tx = nil
	return err
}

// Rollback 回滚事务
func (db *SQLiteDB) Rollback() error {
	if db.tx == nil {
		return fmt.Errorf("no active transaction")
	}

	err := db.tx.Rollback()
	db.tx = nil
	return err
}

// Close 关闭数据库连接
func (db *SQLiteDB) Close() error {
	if db.tx != nil {
		db.tx.Rollback()
	}
	return db.db.Close()
}

