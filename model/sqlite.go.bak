		)`,

		// 证书表
		`CREATE TABLE IF NOT EXISTS certificates (
			id INTEGER PRIMARY KEY AUTOINCREMENT,
			domain TEXT NOT NULL UNIQUE,
			cert_file TEXT NOT NULL,
			key_file TEXT NOT NULL,
			status TEXT NOT NULL,
