			role TEXT NOT NULL DEFAULT 'user',
			status TEXT NOT NULL DEFAULT 'active',
			expire_at TIMESTAMP,
			traffic_limit INTEGER DEFAULT 0,
			created_at TIMESTAMP NOT NULL,
